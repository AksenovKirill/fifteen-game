body,
html {
    font: 16px/1.4 Georgia, serif;
    background: rgb(214, 207, 207);
  }

.page {
  max-width: 460px;
  padding: 2rem;
  margin: 0 auto;
  text-align: center;
  user-select: none;
    &Shuffle {
      pointer-events: none;
      opacity: 0.6;
  }
}

h1 {
  font: 3rem/1.2 Georgia, serif;
  margin-bottom: 0.5em;
}

h3 {
  font: 2rem/1.2 Georgia, serif;
}

.active {
  display: 'block'
}

.invisible {
  display: 'none';
}

.button-active {
  display: 'inline-block'
}

.win {
  font: 4rem/1.2 Georgia, serif;
  color: transparent;    
	-webkit-background-clip: text;
	background-clip: text;
	background-image: linear-gradient(to right, red, #922ec5);
  margin-top 2rem;
}

.fifteen {
  width: 100%;
  padding-bottom: 100%;
  background:#e5d6f6;
  margin-bottom: 1.5rem;
  position: relative;

  .item {
    position: absolute;
    left:0;
    top:0;
    width: 25%;
    height: 25%;
    margin: 0;
    padding: 0;
    border: none;
    background: #000;
    color: #fff;
    font-size: 2rem;
    cursor: pointer;
    box-shadow: inset 1px 1px #e5d6f6;
    transition: transform 0.2s, filter 2s;
    outline: none;

    &Val {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 84%;
      height: 84%;
      margin: 8%;
      box-shadow: inset 0 0 0 2px #922ec5;
    }
  }
  &Won {
    .item {
      filter: brightness(300%);
    }
  }
}

.rules {
  margin: 2rem 0;
}

.list-rules {
  max-width: 340px;
  margin: 0 auto;
  justify-content: space-between;
  align-items: center;
  border: 1px solid #922ec5;
  border-radius: 5px;
}

.list-rules-active {
  display: 'flex';
}

.rule p {
  font: 1.6rem/1.4 Georgia, serif;
  padding: 0.3em;
  border-bottom: 1px solid #922ec5;
}

.button {
  color: #fff;
  background: #000;
  font: 1.4rem/1.4 Georgia, serif;
  border: none;
  cursor: pointer;
  padding 0.7em 1em;
  border-radius: 10px;
  margin: 0.2em;

  &:hover {
    background: #922ec5;
  }
}
